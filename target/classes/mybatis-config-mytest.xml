<!--配置环境-->
<environments default="development">
    <!--配置mysql的环境-->
    <environment id="development">
        <!--配置事务-->
        <transactionManager type="JDBC"></transactionManager>
        <!--配置连接池-->
        <dataSource type="POOLED">
            <property name="driver" value="${driver}"/>
            <property name="url" value="${url}"/>
            <property name="username" value="${username}"/>
            <property name="password" value="${password}"/>
        </dataSource>
    </environment>
</environments>

<!--    3、注册使用的mapper.xml-->
<!--    每一个Mapper.xml 都需要再Mybatis核心配置文件中注册-->
<mappers>
<!--   使用xml配置     //可以添加多个mapper，但如果mapper的命名空间相同，则不同mapper里面的接口调用方法不能相同-->
    <mapper resource="SMV/myTest/UserMapper.xml"/>
    <mapper resource="SMV/myTest/UserMapper2.xml"/>
    <mapper resource="SMV/myTest/LocationMapper.xml"/>
<!--    使用注解配置-->
<!--    <mapper class="SMV/myTest/UserDao"/>-->
</mappers>

</configuration>

